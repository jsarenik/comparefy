function formatter(y) {
    if (y < 1)
	return '$' + y.toFixed(4);
    else if (y < 1000)
	return '$' + y.toFixed(2);
    else
	return '$' + y.toFixed(0);
}
function formatter2(y) {
    if (y < 1)
	return '$' + y.toFixed(5);
    else
	return '$' + y.toFixed(2);
}

